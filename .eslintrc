{
  "extends": "react-app",
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "react/jsx-no-bind": 0,
    "react/require-default-props": 1,
    "react/no-danger": 1,
    "max-len": [1, 120, 2],
    "class-methods-use-this": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**.js", "**/*.test.js", "**/src/setupTests.js"],
      "env": { "jest": true }
    }
  ]
}